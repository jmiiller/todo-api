        "eslint-plugin-react": "^7.25.2",
        "eslint-plugin-react-hooks": "^1.7.0",
        "jest": "^27.0.6",
        "nodemon": "^2.0.7",
        "prettier": "^2.4.1",
        "shelljs": "0.8.4",
        "supertest": "6.1.3",
        "ts-jest": "^27.0.3",
        "ts-node": "9.1.1",
        "ts-node-dev": "^1.1.8",
        "typescript": "4.1.3",
        "@graphql-codegen/typescript-resolvers": "2.3.2",
        "@graphql-codegen/typescript": "2.2.4",
        "@graphql-codegen/introspection": "2.1.0"
    }
