{
    "name": "todo-api",
    "version": "0.1.0",
    "description": "My basic Todo Api",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
    },
    "author": "Jeffrey Miiller",
    "license": "MIT",
    "scripts": {
        "build-ts": "tsc",
        "build": "rimraf dist && npm run build-ts && npm run copy-static-assets",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "start": "ts-node-dev --respawn dev/server-local.ts | bunyan",
        "test": "jest --forceExit --coverage --verbose",
        "provision": "bash scripts/provision.sh",
        "destroy": "bash ./scripts/destroy.sh",
        "build-lambda": "bash ./scripts/build-lambda.sh",
        "generate-types": "graphql-codegen --config graphql-codegen.yml"
    },
    "dependencies": {
        "@graphql-codegen/add": "^3.1.0",
        "@graphql-codegen/schema-ast": "^2.2.0",
        "@types/lodash": "^4.14.173",
        "@vendia/serverless-express": "^4.3.11",
        "apollo-server-express": "^3.3.0",
        "async": "3.2.0",
        "aws-lambda": "^1.0.6",
        "aws-sdk": "^2.999.0",
        "bcrypt-nodejs": "0.0.3",
        "body-parser": "1.19.0",
        "bunyan": "^1.8.15",
        "dotenv": "8.2.0",
        "errorhandler": "1.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "express": "4.17.1",
        "express-bunyan-logger": "^1.3.3",
        "express-flash": "0.0.2",
        "express-validator": "6.9.2",
        "graphql": "^15.5.3",
        "lodash": "^4.17.21",
        "nodemailer": "6.4.17",
        "passport-local": "1.0.0",
        "response-time": "^2.3.2",
        "rimraf": "^3.0.2",
        "serve-favicon": "^2.5.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "2.2.1",
        "@types/async": "3.2.5",
        "@types/aws-lambda": "^8.10.84",
        "@types/bcrypt-nodejs": "0.0.31",
        "@types/body-parser": "1.19.0",
        "@types/chai": "4.2.14",
        "@types/compression": "1.7.0",
        "@types/concurrently": "5.2.1",
        "@types/errorhandler": "1.5.0",
        "@types/eslint": "7.2.6",
        "@types/express": "4.17.11",
        "@types/express-bunyan-logger": "^1.3.3",
        "@types/express-flash": "0.0.2",
        "@types/express-session": "1.17.3",
        "@types/jest": "^26.0.23",
        "@types/jquery": "3.5.5",
        "@types/lusca": "1.6.2",
        "@types/node": "14.14.25",
        "@types/nodemailer": "6.4.0",
        "@types/passport": "1.0.5",
        "@types/passport-local": "1.0.33",
        "@types/request": "2.48.5",
        "@types/request-promise": "4.1.47",
        "@types/response-time": "^2.3.5",
        "@types/serve-favicon": "^2.5.3",
        "@types/shelljs": "0.8.8",
        "@types/supertest": "2.0.10",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
